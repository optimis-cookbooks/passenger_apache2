PassengerRoot <%= node[:passenger][:rbenv][:root_path] %>
PassengerRuby <%= node[:passenger][:rbenv][:binary] %>

PassengerFriendlyErrorPages off

<% if node[:passenger][:max_pool_size] %>
  PassengerMaxPoolSize <%= node[:passenger][:max_pool_size] %>
<% end %>

<% if node[:passenger][:min_instances] %>
  PassengerMinInstances <%= node[:passenger][:min_instances] %>
<% end %>

<% if node[:passenger][:spawn_method] %>
  PassengerSpawnMethod <%= node[:passenger][:spawn_method] %>
<% end %>

<% if node[:passenger][:pre_start] %>
  <% node[:passenger][:pre_start][:urls].each do |url| %>
    PassengerPreStart <%= url %>
  <% end %>
<% end %>
